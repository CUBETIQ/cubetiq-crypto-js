{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "lib": ["ES2015"],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "declaration": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
